{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": ".",
    "jsx": "react",
    // "lib": ["es6", "es7", "dom"],
    "esModuleInterop": true,
    "types": [
      "jest",
      "react",
      "react-dom",
      "react-router-dom",
      "facebook-js-sdk",
      "facebook-instant-games",
      "history",
      "node",
      "swiper"
    ],
    "paths": {
      "Src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./index.d.ts",
    "./webpack.config.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.psd",
    "./src/view3/**",
    "./src/view/**",
    "./src/jssdk/plugins/mock/*.ts"
  ]
}